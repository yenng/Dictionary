#File = cicle.kv

<Label>:
    halign: 'left'
    font_name: 'Roboto'
    outline_color: (1, 1, 0)

BoxLayout:
    orientation: 'horizontal'
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text_size:self.size
            bold: True
            font_size: 60
            font_name: 'Roboto'
            text: 'Query Word'
            valign: 'top'
        TextInput:
            font_size: 60
            border: (2,2,2,2)
            id: queryWord
            valign: 'top'
        Button:
            id: confirm
            size_hint: .5, .2
            on_press: app.confirmEnter()
            text: 'Confirm'
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text_size:self.size
            bold: True
            font_size: 60
            font_name: 'Roboto'
            text: 'Nearby Word'
            size_hint: 1,.1
        GridLayout:
            size: root.size
            rows: 10  
            Button:
                id: near0
                on_press: app.near0()
            Button:
                id: near1
                on_press: app.near1()
            Button:
                id: near2
                on_press: app.near2()
            Button:
                id: near3
                on_press: app.near3()
            Button:
                id: near4
                on_press: app.near4()
            Button:
                id: near5
                on_press: app.near5()
            Button:
                id: near6
                on_press: app.near6()
            Button:
                id: near7
                on_press: app.near7()
            Button:
                id: near8
                on_press: app.near8()
            Button:
                id: near9
                on_press: app.near9()
                
            
           
